// MATTEO MANCINI 4^H Es."a" slide 30

#include <stdio.h>
#include <stdlib.h>

int main()
{
	char nomeFile[]={"Es_slide30_Mancini/nomi.txt"};
	char nomeFile2[]={"Es_slide30_Mancini/NOMI2.txt"};
	int err;
	char c;
	FILE *puntaFile,*puntaFile2;
	
	puntaFile=fopen(nomeFile,"r");
	puntaFile2=fopen(nomeFile2,"w");
	
	if(puntaFile!=0 && puntaFile2!=0)
	{
		while(!feof(puntaFile))
		{
			c=fgetc(puntaFile);
			if(c>='a'&&c<='z')
			{
				c-=32;
			}
			fputc(c,puntaFile2);
		}
		
		fclose(puntaFile);
		fclose(puntaFile2);
	}
	else
		printf("\nIL FILE NON PUO' ESSERE APERTO!");
		
	printf("\n");
	system("pause");
}
