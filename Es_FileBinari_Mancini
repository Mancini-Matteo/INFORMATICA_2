void stampaRecord(char nomeFile[],int posizione)
{
	int i;
	FILE *pf;
	pf=fopen(nomeFile,"r");
	
	if(pf!=0)
	{
		printf("Numero di matricola: ");
		printf("%d",studente[posizione].matricola);
		printf("\nCognome dello studente: ");
